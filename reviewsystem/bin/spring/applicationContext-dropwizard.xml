<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- rest resource container -->
	<bean id="restResourceContainer" class="review.system.container.ResourceContainer">
		<property name="restResources">
			<list>
				<ref bean="HelloWorldService" />
				<ref bean="UserService" />
				<ref bean="ReviewService" />
				<ref bean="ContactService" />
				<ref bean="DeficiencyService" />
				<ref bean="GroupService" />
				<ref bean="PositionService" />
				<ref bean="InvatationService" />
			</list>
		</property>
	</bean>

</beans>